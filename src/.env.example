APP_NAME="GuildForge"
APP_DESCRIPTION="Platform for wargames and role-playing games guilds"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8080

APP_LOCALE=es
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=es_ES

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_CHANNELS=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Elasticsearch Logging
ELASTICSEARCH_ENABLED=false
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USER=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_INDEX=guildforge-logs
ELASTICSEARCH_SSL=false

DB_CONNECTION=pgsql
DB_HOST=db
DB_PORT=5432
DB_DATABASE=guildforge
DB_USERNAME=guildforge
DB_PASSWORD=secret

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
# Production: set to true for HTTPS-only cookies
SESSION_SECURE_COOKIE=false

# Trusted proxies: use specific IPs in production (e.g., 192.168.1.0/24)
# Default '*' trusts all proxies, suitable only for Docker development
TRUSTED_PROXIES=*

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database

REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_PREFIX=guildforge_

MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@example.local"
MAIL_FROM_NAME="${APP_NAME}"

VITE_APP_NAME="${APP_NAME}"

# Cloudinary
CLOUDINARY_URL=cloudinary://API_KEY:API_SECRET@CLOUD_NAME
VITE_CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_PREFIX=guildforge
VITE_CLOUDINARY_PREFIX="${CLOUDINARY_PREFIX}"

# Image Optimization
IMAGE_OPTIMIZATION_ENABLED=true
IMAGE_OPTIMIZATION_MAX_WIDTH=2048
IMAGE_OPTIMIZATION_MAX_HEIGHT=2048
IMAGE_OPTIMIZATION_QUALITY=85
IMAGE_OPTIMIZATION_FORMAT= # null = keep original format

# Bot protection
BOT_PROTECTION_ENABLED=true
BOT_LOG_BLOCKED=false
